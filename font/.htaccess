# .well-known dizinine eriÅŸime izin ver
RewriteRule ^\.well-known/.+ - [L]

# VarsayÄ±lan dizin dosyalarÄ±nÄ± ayarla
DirectoryIndex index.php index.cgi index.html

# Ã–zel 404 ve 500 hata sayfalarÄ±
ErrorDocument 404 /error/404.php
