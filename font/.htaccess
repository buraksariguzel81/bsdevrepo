    #Options -MultiViews
</IfModule>

# URL yeniden yazma motorunu etkinleÅŸtir
RewriteEngine On
RewriteBase /

# Yetkilendirme baÅŸlÄ±ÄŸÄ±nÄ± koru
RewriteCond %{HTTP:Authorization} ^(.*)
RewriteRule .* - [e=HTTP_AUTHORIZATION:%1]

# X-Server-Addr baÅŸlÄ±ÄŸÄ±nÄ± koru
RewriteCond %{HTTP:X-Server-Addr} ^(.*)
